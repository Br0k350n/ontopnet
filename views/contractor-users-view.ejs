<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: "View Users", tag: "Contractor", isAdmin: true}); %>
<body>
    <%- include('partials/header', {session: session}); %>
    
    <div class="w-full layout-container lc-home">
        <div class="index-layout">
            <!-- Contractor navigation instead of admin navigation -->
            <%- include('partials/contractor-cat'); %>
            <div class="body-container">
                <main class="index-content">
                    <section class="content">
                        <h1 class="user-title">View Users</h1>
                        
                        <!-- Charts Container (optional, for statistics) -->
                        <div class="charts-container">
                            <canvas id="combinedChart"></canvas>
                        </div>
                        
                        <!-- User Table (read-only) -->
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Discord</th>
                                        <th>Role</th>
                                        <th>Last Login</th>
                                        <th>Login Method</th>
                                        <!-- <th>IP</th> -->
                                        <th>Referrer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user, index) => { 
                                        let referrer = user.referrer ? JSON.parse(user.referrer) : null;
                                    %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= user.username %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.discord_id || "Not linked" %></td>
                                            <td><%= user.isAdmin ? "Admin" : "User" %></td>
                                            <td><%= user.last_login ? new Date(user.last_login).toLocaleDateString() : "Never" %></td>
                                            <td><%= user.last_login_method || "N/A" %></td>
                                            <!-- <td><%= user.ip || "Not available" %></td> -->
                                            <td><%= referrer ? referrer.username : "No Referrer" %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination (read-only navigation) -->
                        <div class="pagination">
                            <% if (currentPage > 1) { %>
                                <button class="pagination-btn" onclick="changePage(<%= currentPage - 1 %>)">Previous</button>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <button class="pagination-btn <%= i === currentPage ? 'active' : '' %>" onclick="changePage(<%= i %>)"><%= i %></button>
                            <% } %>
                            
                            <% if (currentPage < totalPages) { %>
                                <button class="pagination-btn" onclick="changePage(<%= currentPage + 1 %>)">Next</button>
                            <% } %>
                        </div>
                    </section>
                </main>
                <!-- Note: The user modal is omitted since there is no editing, but you could use a view-only modal if desired -->
            </div>
        </div>
    </div>

    <%- include('partials/footer'); %>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Change page function for pagination
        const changePage = function(page) {
            window.location.href = `/contractor/users?page=${page}`;
        };

        // Initialize the Combined Chart (if chart data is provided from the backend)
        const ctxCombined = document.getElementById('combinedChart').getContext('2d');
        new Chart(ctxCombined, {
            type: 'bar',
            data: {
                labels: months, // months array provided by backend
                datasets: [
                    {
                        type: 'line',
                        label: 'New Signups',
                        data: signupData.data, // signupData provided by backend
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        yAxisID: 'y'
                    },
                    {
                        type: 'line',
                        label: 'Total Logins',
                        data: loginData.data, // loginData provided by backend
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 2,
                        yAxisID: 'y'
                    }
                ]
            }
        });
    </script>
    <style>
        /* Basic styling adapted from your admin panel */
        .charts-container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 20px;
            width: 100%;
        }
        .table-container {
            width: 100%;
            overflow-x: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }
        table th, table td {
            padding: 8px;
            text-align: left;
        }
        .pagination {
            display: flex;
            justify-content: center;
            gap: 5px;
            margin-top: 20px;
        }
        .pagination-btn {
            padding: 5px 10px;
            border: 1px solid #ccc;
            background-color: #fff;
            cursor: pointer;
        }
        .pagination-btn.active {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }
    </style>
</body>
</html>
