    <%- include('partials/head', {title: "Redirect Confirmation", tag: "City On Top", isAdmin: false}); %>
<body>
    <%- include('partials/header', {session: session}); %>
    
    <div class="w-full layout-container lc-home">
        <div class="index-layout">
            <div class="categories">
                <!-- Add categories if needed in the future -->
            </div>
            <div class="body-container">
        
                <main class="index-content">
                    <div class="confirmation-box" style="text-align: center; margin-top: 50px;">
