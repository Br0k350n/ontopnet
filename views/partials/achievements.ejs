<div class="container">
    <h2>User Achievements</h2>

    <!-- Stats Section -->
    <div class="stats">
        <strong>Achievements Earned:</strong> 
        <span id="earned-count"><%= earnedAchievements %></span> / 
        <span id="total-count"><%= totalAchievements %></span>
    </div>

    <!-- Progress Bar -->
    <div class="progress-container">
        <div class="progress-bar" id="progress-bar" style="width: <%= (earnedAchievements / totalAchievements) * 100 %>%"></div>
    </div>

    <!-- Achievements List -->
    <div class="achievement-list">
        <% achievements.forEach(achievement => { %>
            <div class="achievement-item <%= achievement.isLocked == 1 ? 'locked' : '' %>">
                    <div class="badge">
                        🏆
                    </div>
                <div class="achievement-info">
                    <h3><%= achievement.name %> <%= achievement.isLocked == 1 ? "[LOCKED]" : '' %></h3>
                    <p><%= achievement.description %></p>
                    <span class="bonus-votes">Bonus Votes: <%= achievement.bonus_votes %></span>
                </div>
            </div>
        <% }); %>
        
    </div>
</div>