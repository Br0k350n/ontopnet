<% if (!cookies.get('cookieConsent')) { %>
    <div id="cookie-warning" style="position: fixed; bottom: 0; width: 100%; background-color: rgba(0,0,0,0.8); color: white; padding: 10px; text-align: center;">
      <p>This website uses cookies to ensure you get the best experience. <a href="/privacy-policy" style="color: #ddd;" target="_blank">Learn more</a>.</p>
      <button id="accept-cookies" style="background-color: #4CAF50; color: white; padding: 5px 10px; border: none; cursor: pointer;">Accept</button>
    </div>
  <% } %>
  
<script>
  document.getElementById('accept-cookies').addEventListener('click', function() {
    fetch('/set-cookie-consent', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
    }).then(() => {
      document.getElementById('cookie-warning').style.display = 'none';
    });
  });
</script>
  