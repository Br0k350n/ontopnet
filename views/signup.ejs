<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: "Sign Up", tag: "City On Top", isAdmin: false}); %>
<body>
  <%- include('partials/header', {session: session}); %>
  
  <div class="w-full layout-container lc-home">
      <div class="index-layout">
          <div class="categories">
            <%- include('partials/banner-ad', {section: "a", number:1}); %>
          </div>
          <div class="body-container signup">
  
              <main class="index-content">
                <h1>Sign Up</h1>
                <form action="/signup" method="POST" class="auth-form">
                  <div class="form-row">
                    <div class="form-group double">
                      <label for="username">Username:</label>
                      <input type="text" id="username" name="username" maxlength="20" required class="form-input">
                    </div>
                    
                    <div class="form-group double">
                      <label for="email">Email:</label>
                      <input type="email" id="email" name="email" maxlength="30" required class="form-input">
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" maxlength="40" required class="form-input">
                  </div>
                
                  <!-- Optional Invite Code -->
                  <div class="form-group">
                    <label for="invite">Invite Code (Optional):</label>
                    <input type="text" id="invite" name="invite" maxlength="12" class="form-input" value="<%= invite || '' %>">
                  </div>
                
                  <button type="submit" class="form-button">Sign Up</button>
                </form>
                
              </main>
  
              
  
          </div> 
          
      </div>
      <div class="ctas space">
        <%- include('partials/banner-ad', { section: "c", number: 1 }); %>
        <%- include('partials/banner-ad', { section: "c", number: 2 }); %>
      </div>
  </div>
  <%- include('partials/footer'); %>
</body>
</html>
